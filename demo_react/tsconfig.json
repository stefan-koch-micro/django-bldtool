{
    "compilerOptions": {
        "allowJs": true,
        "jsx": "react",
        "moduleResolution": "node",
        "module": "es6",
        "lib": ["dom", "es2015", "es2016", "es2017", "dom.iterable"],
        "target": "es6",
        "allowSyntheticDefaultImports": true,
        "strictNullChecks": true
    },
    "exclude": [
        "node_modules",
        "env",
        "build",
        "bldtool",
        "**/webpack*"
    ],
    "include": ["**/*"]
}
